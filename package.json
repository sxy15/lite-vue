{
  "engines": {
    "pnpm": ">= 8.8.0"
  },
  "packageManager": "pnpm@8.8.0",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint ./packages/**/src ./packages/**/test --ext .js,.ts,.tsx,.vue,.mjs,.cjs",
    "dev": "pnpm --dir ./packages/sxyz dev",
    "build": "pnpm --dir ./packages/sxyz build",
    "build:site": "pnpm --dir ./packages/sxyz build:site",
    "test": "echo \"test\" "
  },
  "nano-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@sxyz/cli": "workspace:*",
    "@sxyz/eslint-config": "workspace:*",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "prettier": "^3.0.3"
  }
}
