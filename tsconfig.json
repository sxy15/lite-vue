{
  "compilerOptions": {
    "target": "esnext", // ECMAScript目标版本
    "module": "esnext", // 模块代码生成规范
    "moduleResolution": "node", // 模块解析策略
    "outDir": "dist", //编译输出目录
    "resolveJsonModule": true, // 允许解析json模块
    "strict": false,
    "lib": [
      "esnext",
      "dom"
    ], // 指定要包含的库文件
    "types": [
      "node"
    ], // 包含的类型声明文件
    "baseUrl": ".",
    "paths": {
      "@vue/*": [
        "packages/*/src"
      ]
    }
  }
}